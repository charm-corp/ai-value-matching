# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/charm_inyeon

# JWT Secrets
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Social Auth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# Encryption Keys (보안을 위해 반드시 변경)
ENCRYPTION_MASTER_KEY=your-256-bit-hex-master-encryption-key-here-64-characters
PERSONAL_INFO_KEY=your-256-bit-hex-personal-info-encryption-key-64-chars
SENSITIVE_DATA_KEY=your-256-bit-hex-sensitive-data-encryption-key-64-chars
ASSESSMENT_DATA_KEY=your-256-bit-hex-assessment-data-encryption-key-64-chars
SEARCH_SALT=your-search-salt-for-hashing-here

# Privacy & Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUTO_DELETE_INACTIVE_ACCOUNTS=true

# === RLS + Backend Configuration 추가 설정 ===

# Enhanced JWT Settings
JWT_ACCESS_EXPIRES_IN=15m
JWT_ADMIN_EXPIRES_IN=24h
JWT_SYSTEM_EXPIRES_IN=1h

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=300

# Performance Monitoring Thresholds
SLOW_QUERY_THRESHOLD=1000
MEMORY_THRESHOLD=500
CPU_THRESHOLD=80
RESPONSE_TIME_THRESHOLD=2000

# Health & Alert Configuration
HEALTH_ALERT_WEBHOOK=
ALERT_WEBHOOK_URL=

# AI Services (OpenAI for insights)
OPENAI_API_KEY=
AI_MODEL=gpt-3.5-turbo

# Matching Algorithm Configuration
MATCHING_ALGORITHM_VERSION=2.1
COMPATIBILITY_THRESHOLD=65
MAX_DAILY_MATCHES=20

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_SERENDIPITY_MATCHING=true

# Database Connection Pool
DB_MAX_CONNECTIONS=10

# Security Settings
BCRYPT_SALT_ROUNDS=12

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_SWAGGER=true

# Vercel Deployment
VERCEL_ENV=development